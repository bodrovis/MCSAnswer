<%= turbo_frame_tag achievement_ownable do %>
  <%= form_with model: [:admin, achievement_ownable] do |f| %>
    <%= render 'shared/errors', object: achievement_ownable %>

    <%= f.hidden_field :ownable_type, value: 'Team' %>
    <%= hidden_field_tag :achievement_id, @achievement.id %>

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :ownable_id %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :ownable_id, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit t('global.button.submit'), class: 'btn btn-primary' %>
  <% end %>
<% end %>