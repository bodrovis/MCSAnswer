<%= turbo_frame_tag team do %>
  <article class="my-3">
    <%= team.title %>

    <%= link_to t('global.button.edit'), edit_admin_team_path(team), class: 'btn btn-secondary' %>

    <%= link_to t('global.button.delete'), admin_team_path(team), class: 'btn btn-danger',
      data: {turbo_method: :delete, turbo_confirm: t('global.dialog.sure')} %>
    
    <hr>
  </article>
<% end %>