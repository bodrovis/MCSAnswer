<%= turbo_frame_tag question, class: 'item' do %>
  <section class="mb-3">
    <p>
      <i class="bi bi-arrows-move js-sort-handle fs-3"></i>
      <span class="badge bg-info" data-sortable-target="position"><%= question.position %></span>
      <%= question.body.html_safe %>
    </p>
    
    <p class="hide-reveal">
      <span><%= question.answer %></span>
    </p>

    <%= link_to t('global.button.edit'), edit_admin_game_question_path(question.game, question),
      class: 'btn btn-info btn-sm' %>
    <%= link_to t('global.button.delete'), admin_game_question_path(question.game, question),
      class: 'btn btn-danger btn-sm',
      data: {turbo_method: :delete, turbo_confirm: t('global.dialog.sure')} %>

    <hr>
  </section>
<% end %>