<%= turbo_frame_tag "#{dom_id(game_player.playing_team)}_#{dom_id(game_player)}}" do %>
  <%= link_to game_player.name_with_email, user_path(game_player.user) %>
  <% if game_player.captain? %>
    <small>капитан</small>
  <% end %>

  <%= link_to t('global.button.edit'), edit_admin_game_playing_team_game_player_path(game_player.playing_team.game, game_player.playing_team, game_player),
      class: 'btn btn-secondary btn-sm' %>

  <%= link_to t('global.button.delete'), admin_game_playing_team_game_player_path(game_player.playing_team.game, game_player.playing_team, game_player),
      class: 'btn btn-danger btn-sm',
      data: {turbo_method: :delete, turbo_confirm: t('global.dialog.sure')} %>
  <hr>
<% end %>

