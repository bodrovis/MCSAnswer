<%= turbo_frame_tag "#{dom_id(playing_team)}_#{dom_id(game_player)}}" do %>
  <%= form_with model: [:admin, game, playing_team, game_player], data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f| %>
    <%= render 'shared/errors', object: game_player %>

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :user_id %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :user_id, class: 'form-control' %>
      </div>
    </div>

    <div class="mb-3">
      <div class="form-check">
        <%= f.label :captain, class: 'form-check-label', for: "game_player_captain_#{game_player.id || 'new'}" %>

        <%= f.check_box :captain, class: 'form-check-input', id: "game_player_captain_#{game_player.id || 'new'}" %>
      </div>
    </div>

    <%= f.submit t('global.button.submit'), class: 'btn btn-primary' %>
  <% end %>
<% end %>