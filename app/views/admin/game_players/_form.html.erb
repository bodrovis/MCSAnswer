<%= turbo_frame_tag "#{dom_id(team_game)}_#{dom_id(game_player)}}" do %>
  <%= form_with model: [:admin, game, team_game, game_player], data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f| %>
    <%= render 'shared/errors', object: game_player %>

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :user_id %>
      </div>

      <div class="col-sm-10">
        <%= f.collection_select :user_id, User.all, :id, :name_with_email, {}, class: 'form-select' %>
      </div>
    </div>

    <div class="mb-3">
      <div class="form-check">
        <%= f.label :captain, class: 'form-check-label' %>

        <%= f.check_box :captain, class: 'form-check-input' %>
      </div>
    </div>

    <%= f.submit t('global.button.submit'), class: 'btn btn-primary' %>
  <% end %>
<% end %>